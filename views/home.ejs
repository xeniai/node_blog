<% layout('layouts/boilerplate') %>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% for (let tourground of tourgrounds) { %>
  <div class="col">
    <div class="card h-100">
      <img src=<%= tourground.image %>>
      <div class="card-body">
        <center>
          <h5 class="card-title"><a href="/tourgrounds/<%= tourground._id %>" class="text-decoration-none"><%= tourground.title %></a></h5>
          <p class="card-text"><small class="text-muted">Unsplash photo by <a class="text-decoration-none" href=<%= tourground.imageLink %> > <%= tourground.imageBy %> </a></small></p>
        </center>
        <br>
        <p class="card-text"><%= tourground.location %></p>
      </div>
    </div>
  </div>
  <% } %>
</div>